<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/imageView_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:clickable="false"
        android:src="@drawable/ic_location_on_black_18dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/linear_item_settings"
        android:layout_alignBottom="@+id/linear_item_settings"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/linear_item_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/progressBar_setting"
        android:layout_toRightOf="@+id/imageView_settings"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/textView_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fsdfds"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText" />


        <ImageView
            android:id="@+id/imageView_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_error_red_18dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textView_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="teste gfd"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/textView_info"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="15dp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textView_setting_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_item_settings"
            android:layout_toRightOf="@+id/imageView_settings"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="right"
            android:scrollbars="vertical"
            android:text="GPS"
            android:visibility="gone"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_setting"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:ignore="RtlHardcoded"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView_importance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linear_item_settings"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/linear_item_settings"
        android:layout_centerVertical="false"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/ic_error_red_18dp"
        tools:ignore="RtlHardcoded"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_settings_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_item_settings"
        android:layout_toRightOf="@+id/imageView_settings"
        android:clickable="false"
        android:text="fsdfdsfdshfdsfdskjfhdskfsdfsd dsf sd fs fs dsddsfsfdsfdsffdsfsdfdsfdsfsdfdsfdsfdsjhfsdhfkjdshfjsdhfkjdshf jhdsjhfsdkjhdjhfsdjhf skjdhf skjdhf kjsdhf kjshf kjshdf kjsdh fkjsdh fkjshf kjshd kjfsdh fkjsh"
        android:visibility="visible"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>
